<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/material_blue_grey_800"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:text="Nanodegree Apps!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80px"
        android:layout_marginBottom="80px"
        android:textSize="32sp"
        android:textColor="@color/lightOrange"
        />

    <Button
        android:id="@+id/spotifyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titleTextView"
        android:minWidth="600px"
        android:text="Spotify Streamer"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/scoresButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spotifyButton"
        android:minWidth="600px"
        android:text="Scores App"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/libraryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/scoresButton"
        android:minWidth="600px"
        android:text="Library App"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/buildButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/libraryButton"
        android:minWidth="600px"
        android:text="Build it Bigger App"
        android:textAllCaps="false"
        />


    <Button
        android:id="@+id/xyzButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buildButton"
        android:minWidth="600px"
        android:text="XZY Reader"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/capstoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/xyzButton"
        android:minWidth="600px"
        android:text="Capstone App"
        android:textAllCaps="false"
        />


</RelativeLayout>
